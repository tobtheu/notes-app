{
  "name": "notiz-app",
  "private": true,
  "version": "0.0.0",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:build": "tsc -p tsconfig.electron.json && node -e \"require('fs').writeFileSync('dist-electron/package.json', '{\\\"type\\\": \\\"commonjs\\\"}')\"",
    "electron:dev": "concurrently \"vite\" \"wait-on tcp:5173 && npm run electron:build && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "electron:start": "npm run electron:build && electron ."
  },
