{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "NotizApp",
  "version": "0.3.3",
  "identifier": "com.tobtheu.notizapp",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "NotizApp",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/tobtheu/notes-app/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDg1NkYxMzA1NDU1MzY0MzcKUldRM1pGTkZCUk52aFZTLzN1NWkzNWdiekh6OVFyc2NXTjVneVA5amUyZU04TnpvN2EvekJwLzUK"
    }
  }
}